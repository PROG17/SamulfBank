@model ALMSamulfBank.ResponseMessage;
@{
    ViewData["Title"] = "Index";
}
<h2>Transfer - Index</h2>

<div class="container">
    <div class="row">
        @if (Model.Success == true)
        {
            <h1>@Model.Message</h1>
        }
        
        @if (Model.Success == false)
        {
            <h1>@Model.Message</h1>
        }
        <form asp-controller="Transfer" asp-action="Index" method="post">
            <div class="col-md-5" style="height:500px;">

                <div class="form-inline" style="margin:10px;">
                    <label>From account: </label>
                    <input type="number" class="form-control" name="FromAccountId" style="width:200px" />

                </div>
                <div class="form-inline" style="margin:10px;">
                    <label>To account: </label>
                    <input type="number" class="form-control" name="ToAccountId" style="width:200px" />

                </div>

                <div class="form-inline" style="margin:10px;">
                    <label>Amount:</label>
                    <input id="amountInput" type="number" name="Amount" class="form-control" placeholder="Amount" min="0" style="width:200px; margin-left:3px" />

                </div>


                <div class="form-inline" style="margin-left:75px;">
                    <input type="submit" class="btn btn-success"  style="width:80px" value="Transfer" />
                   
                </div>
            </div>

            <div class="col-md-5" style="height:500px;">
                <div style="height:400px;width:300px;margin-top:20px">
                    <h5 id="detailsHead"></h5>
                    <p id="detailsAccount"></p>
                </div>
            </div>
        </form>
    </div>
</div>