@model List<ALMSamulfBank.Account>
@{
    ViewData["Title"] = "Index";
}
<h2>Deposit/Withdraw - Index</h2>

<div class="container">
    <div class="row">


        <div class="col-md-5" style="height:500px;">

            <div class="form-inline" style="margin:10px;">
                <label>Account: </label>
                <input type="number" class="form-control" id="accountInput" style="width:200px" />
                <select class="form-control" id="accountSelect" style="height:35px;">
                    <option disabled selected value="default"> Accounts </option>
                    @foreach (var account in Model)
                    {
                        <option value=@account.AccountNumber>#@account.AccountNumber</option>
                    }
                </select>
            </div>

            <div class="form-inline" style="margin:10px;">
                <label>Amount:</label>
                <input id="amountInput" type="number" class="form-control" placeholder="Amount" min="0" style="width:200px; margin-left:3px" />

            </div>


            <div class="form-inline" style="margin-left:75px;">
                <button class="btn btn-success" id="depositBtn" style="width:80px">Deposit</button>
                <button class="btn btn-warning" id="withdrawBtn" style="margin-left:35px; width:80px">Withdraw</button>
            </div>
        </div>

        <div class="col-md-5" style="height:500px;">
            <div style="height:400px;width:300px;margin-top:20px">
                <h5 id="detailsHead"></h5>
                <p id="detailsAccount"></p>
            </div>
        </div>
    </div>
</div>